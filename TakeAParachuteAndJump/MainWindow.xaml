<Window x:Class="TakeAParachuteAndJump.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TakeAParachuteAndJump"
        mc:Ignorable="d"
        Title="Take a parachute and jump" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="landscapeCanvas" Grid.Column="0" Background="DeepSkyBlue"
                ClipToBounds="True"/>
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10">
            <Button x:Name="startButton" Content="Start" Width="50" Click="startButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
