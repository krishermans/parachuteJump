<Window x:Class="TakeAParachuteAndJump.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TakeAParachuteAndJump"
        mc:Ignorable="d"
        Title="Take a parachute and jump" Height="670" Width="1000" Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Canvas x:Name="landscapeCanvas" Grid.Column="0" Opacity="100"
                ClipToBounds="True">
            <Image Source="Images/landscape.jpg" VerticalAlignment="Top"/>
        </Canvas>

        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,15,0,0" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Width" Value="100" />
                </Style>
            </StackPanel.Resources>
            <Button x:Name="startButton" Content="Start" Click="startButton_Click"/>
            <Button x:Name="diveButton" Content="Dive" Click="diveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
